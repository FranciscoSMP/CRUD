<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/notas/editar/{{nota.id}}" method="POST">
                        <div class="row mb-3">
                            <label for="titulo" class="form-label">
                                <input type="text" value="{{nota.titulo}}" class="form-control" name="titulo" placeholder="Titulo" autofocus>
                            </label>
                        </div>
                       <div class="row mb-3">
                            <label for="nota" class="form-label">
                                <textarea name="nota" rows="14" class="form-control" placeholder="Nota">{{nota.nota}}</textarea>
                            </label>
                        </div>
                        <div class="d-grid gap-2 ">       
                            <button class="btn btn-primary">
                                Guardar
                            </button>
                        </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>