<div class="container p-4">
    <div class="row">

        {{#each notas}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase custom-title-color">
                            {{titulo}}
                        </h3>
                        <p class="m-2">{{nota}}</p>
                        <p>{{timeago creado_en}}</p>
                        <a href="/notas/eliminar/{{id}}" class="btn btn-danger">Borrar Nota</a>
                        <a href="/notas/editar/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay notas guardadas a√∫n</p>
                    <a href="/notas/add">Cree una Nota Nueva</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>