<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <img src="/img/logo.png" alt="Logo Usuario" class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/login" method="POST">
                    <div class="row mb-3">
                        <label for="nombre_usuario" class="form-label">
                            <input type="text" name="nombre_usuario" placeholder="Nombre de Usuario" class="form-control" autofocus>
                        </label>
                    </div>
                    <div class="row mb-3">
                        <label for="contrasenia" class="form-group">
                            <input type="password" name="contrasenia" placeholder="Contraseña" class="form-control">
                        </label>
                    </div>    
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary">
                            Iniciar Sesión
                        </button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>